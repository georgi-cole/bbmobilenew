# Copy this file to .env and fill in your values.
# NEVER commit .env to source control.

# Required – your OpenAI API key (sk-...)
OPENAI_API_KEY=

# Optional – model to use (default: gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# Port the Express server listens on (default: 4000)
PORT=4000

# Rate-limit window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000

# Max requests per window per IP on /api/* (default: 30)
RATE_LIMIT_MAX_REQUESTS=30

# ── Diary Week feature ────────────────────────────────────────────────────────

# Secret key that grants admin access to write endpoints (POST/PATCH).
# Send as the x-admin-key request header from trusted clients.
# If unset, ALL write requests will be rejected with 403.
ADMIN_API_KEY=change-me-in-production

# Set to "false" to disable the /api/seasons/:id/weeks routes entirely.
# Default: true
FEATURE_DIARY_WEEK=true
